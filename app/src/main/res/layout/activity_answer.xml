<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnswerActivity"
        android:background="@color/purpleLight">
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/half_eclipse"
              android:textColor="@android:color/white"
              android:textSize="23sp"
              android:textStyle="bold"
              android:text="@string/the_right_answer_is" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>

    <TextView
            android:id="@+id/text_view_answer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            tools:text="نص الإجابة الخاطئة"
            android:textColor="@color/purpleDark"
            android:textSize="24sp"
            android:background="@drawable/rectangle_rounded_corners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_return"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="16dp"/>

    <Button
            android:id="@+id/button_return"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="onReturnClicked"
            android:text="@string/back_text"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="20sp"
            android:background="@drawable/button_purple"/>
</androidx.constraintlayout.widget.ConstraintLayout>